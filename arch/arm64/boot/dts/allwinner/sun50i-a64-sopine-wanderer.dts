/dts-v1/;

#include "sun50i-a64-sopine.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/pwm/pwm.h>

/ {
	model = "SoPine on FSN Wanderer";
	compatible = "pine64,sopine-baseboard", "pine64,sopine",
		     "allwinner,sun50i-a64";

	aliases {
		ethernet0 = &emac;
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	reg_vcc1v8: vcc1v8 {
		compatible = "regulator-fixed";
		regulator-name = "vcc1v8";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
	};
	
	leds {
		compatible = "gpio-leds";
		red {
			label = "wanderer:red";
			gpios = <&pio 7 2 GPIO_ACTIVE_HIGH>; /* PH2 */
			default-state = "on";
		};

		green {
			label = "wanderer:green";
			gpios = <&pio 7 3 GPIO_ACTIVE_HIGH>; /* PH3 */
			default-state = "on";
		};
		
		blue {
			label = "wanderer:blue";
			gpios = <&pio 7 9 GPIO_ACTIVE_HIGH>; /* PH9 */
			default-state = "on";
		};
		wifi_en {
			label = "wifi:en";
			gpios = <&r_pio 0 2 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
		wifi_rst {
			label = "wifi:rst";
			gpios = <&r_pio 0 4 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
		
	};
	spi1: spi@01c69000 {
		compatible = "allwinner,sun6i-a31-spi";
		reg = <0x01c69000 0x1000>;
		interrupts = <GIC_SPI 66 IRQ_TYPE_LEVEL_HIGH>;
		clocks = <&ccu CLK_BUS_SPI1>, <&ccu CLK_SPI1>;
		resets = <&ccu RST_BUS_SPI1>;
		clock-names = "ahb", "mod";
		/*dmas = <&dma 24>, <&dma 24>;
		dma-names = "rx", "tx";*/
		status = "okay";
	};
};

/* Hog required GPIOs, e.g. enable USB power */
&pio {
	pullup: pullup {
		pins = "PC7", "PC4", "PB3";
		bias-pull-up;
	};
	i2c0_pins: i2c0_pins {
		pins = "PH0", "PH1";
		function = "i2c0";
		bias-pull-up;
	};
	spi1_pins: spi1_pins {
		pins = "PD0", "PD1", "PD2", "PD3";
		function = "spi1";
	};
};

&r_pio {
	/* Enable Wifi at boot */
	r_pullup: r_pullup {
		pins = "PL2", "PL3", "PL4", "PL5", "PL6";
		bias-pull-up;
	};
	/*wifi_en: wifi_en {
		gpio-hog;
		gpios = <0 2 GPIO_ACTIVE_HIGH 0 4 GPIO_ACTIVE_HIGH>;
		output-high;
		line-name = "wifi_en";
	};*/
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins>;
	status = "okay";
};


&de {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&rmii_pins>;
	phy-mode = "rmii";
	phy-handle = <&ext_rmii_phy>;
	phy-supply = <&reg_dc1sw>;
	status = "okay";
};

&hdmi {
	hvcc-supply = <&reg_dldo1>;
	status = "okay";
};

&mdio {
	status = "okay";
	ext_rmii_phy: ethernet-phy@0 {
		compatible = "ethernet-phy-ieee802.3-c22";
		reg = <0>;
	};
};

&mixer1 {
	status = "okay";
};

&mmc2 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc2_pins>;
	vmmc-supply = <&reg_vcc3v3>;
	vqmmc-supply = <&reg_vcc1v8>;
	bus-width = <4>;
	non-removable;
	cap-mmc-hw-reset;
	status = "okay";
};

&mmc1 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc1_pins>;
	vmmc-supply = <&reg_dldo4>;
	vqmmc-supply = <&reg_eldo1>;
	bus-width = <4>;
	non-removable;
	status = "okay";

	wifi: wifi@1 {
		reg = <1>;
	};
};


&ohci0 {
	status = "okay";
};

&ohci1 {
	status = "okay";
};

&reg_dc1sw {
        regulator-always-on;
	regulator-name = "vcc-phy";
};

&reg_dldo1 {
	regulator-min-microvolt = <3300000>;
	regulator-max-microvolt = <3300000>;
	regulator-name = "vcc-hdmi";
};

&reg_dldo2 {
	regulator-min-microvolt = <3300000>;
	regulator-max-microvolt = <3300000>;
	regulator-name = "vcc-mipi";
};

&reg_dldo4 {
    regulator-always-on;
	regulator-min-microvolt = <3300000>;
	regulator-max-microvolt = <3300000>;
	regulator-name = "vcc-wifi";
};

&tcon1 {
	status = "okay";
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pins_a>;
	status = "okay";
};

&usb_otg {
	dr_mode = "host";
	status = "okay";
};

&usbphy {
	status = "okay";
};
