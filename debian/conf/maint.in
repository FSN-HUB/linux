#!/bin/sh

set -e

# Pass maintainer script parameters to hook scripts
export DEB_MAINT_PARAMS="$*"

# Tell initramfs builder whether it's wanted
export INITRD=Yes

test -d /etc/kernel/${MAINTSCRIPT}.d && run-parts --arg="${KERNELVERSION}" --arg="/boot/vmlinuz-${KERNELVERSION}" /etc/kernel/${MAINTSCRIPT}.d
exit 0

